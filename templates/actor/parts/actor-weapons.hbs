<ol class='items-list'>
    <h3>Weapons</h3>
    <li class="item flexrow items-header">
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class="item-prop">{{localize 'Range'}}</div>
        <div class='item-name'>{{localize 'Details'}}</div>
        <div class='item-controls'>
            <a class='item-control item-create'
               title='{{localize "DOCUMENT.Create" type='Weapon'}}'
               data-type='weapon'>
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type='weapon'}}
            </a>
        </div>
    </li>
    {{#each weapons as |item id|}}
        <li class='item flexrow weapon-slot' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='weapon'>
                        <img src='{{item.img}}'
                             title='{{item.name}}'
                             width='24'
                             height='24'
                        />
                    </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class="item-prop">{{item.system.range}}</div>
            <div class='item-name'>{{item.system.damage}}</div>
            <div class='item-controls'>
                <a class='item-control item-edit'
                   title='{{localize "DOCUMENT.Update" type='Weapon'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete'
                   title='{{localize "DOCUMENT.Delete" type='Weapon'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
        {{#each item.system.attachmentSlots as |slot|}}
            {{#if slot.item}}
                <li class="item flexrow" data-item-id="{{slot.item._id}}">
                    <div class="item-name">{{slot.item.name}}</div>
                    <div class="item-name">{{slot.item.details}}</div>
                    <div class="item-controls">
                        <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
            {{else}}
                <li class="item flexrow empty-slot">
                    <div class="item-name empty">Empty {{slot.type}} Slot</div>
                </li>
            {{/if}}
        {{/each}}
    {{/each}}
</ol>