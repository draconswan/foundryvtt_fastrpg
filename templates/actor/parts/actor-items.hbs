<ol class='items-list'>
    <h3>Armor</h3>
    <li class="item flexrow items-header">
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-name'>{{localize 'Details'}}</div>
        <div class='item-controls'>
            <a class='item-control item-create'
               title='{{localize "DOCUMENT.Create" type='Armor'}}'
               data-type='armor'>
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type='armor'}}
            </a>
        </div>
    </li>
    {{#each armor as |item id|}}
        <li class='item flexrow armor-slot' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='armor'>
                        <img src='{{item.img}}'
                             title='{{item.name}}'
                             width='24'
                             height='24'
                        />
                    </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-name'>{{item.system.details}}</div>
            <div class='item-controls'>
                <a class='item-control item-edit'
                   title='{{localize "DOCUMENT.Update" type='Armor'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete'
                   title='{{localize "DOCUMENT.Delete" type='Armor'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
        {{#if (gt item.system.channelingSlots 0)}}
            {{#if (lt item.system.usedSlots item.system.channelingSlots)}}
                <li class="items flexrow channels">
                    <div class="item-controls flex-right">
                        <a class="item-control item-create"
                           title="Add Channel"
                           data-type="channel"
                           data-parent-armor="{{item._id}}">
                            <i class="fas fa-plus"></i> Add Channel
                        </a>
                    </div>
                </li>
            {{/if}}
        {{/if}}
        {{#each ../channels as |channel id|}}
            {{#if (eq channel.system.parentArmor item._id)}}
                <li class="item flexrow" data-item-id="{{channel._id}}">
                    <div class="item-name">{{channel.name}}</div>
                    <div class="item-name">+{{channel.system.bonus}} to {{channel.system.skill}} checks</div>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Edit Channel"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Channel"><i class="fas fa-trash"></i></a>
                    </div>
                </li>
            {{/if}}
        {{/each}}
    {{/each}}
    <h3>Equipment</h3>
    <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-name'>{{localize 'Details'}}</div>
        <div class='item-controls'>
            <a class='item-control item-create'
               title='{{localize "DOCUMENT.Create" type='Item'}}'
               data-type='item'>
                <i class='fas fa-plus'></i>
                {{localize 'DOCUMENT.New' type='item'}}
            </a>
        </div>
    </li>
    {{#each gear as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='item'>
                        <img src='{{item.img}}'
                             title='{{item.name}}'
                             width='24'
                             height='24'
                        />
                    </a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-name'>{{item.system.details}}</div>
            <div class='item-controls'>
                <a class='item-control item-edit'
                   title='{{localize "DOCUMENT.Update" type='Item'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete'
                   title='{{localize "DOCUMENT.Delete" type='Item'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
    {{/each}}
</ol>